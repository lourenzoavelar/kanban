# Configurações do Kanban Dashboard para Chatwoot

# URL base do Chatwoot (sem barra no final)
VITE_CHATWOOT_BASE_URL=https://app.chatwoot.com

# Nome da aplicação (aparece no título)
VITE_APP_NAME=Kanban Dashboard

# Origens permitidas (separadas por vírgula)
# Adicione aqui as URLs do seu Chatwoot
VITE_ALLOWED_ORIGINS=https://app.chatwoot.com,https://your-chatwoot-instance.com

# Configurações de segurança
VITE_RATE_LIMIT_REQUESTS=50
VITE_RATE_LIMIT_WINDOW_MS=60000

# Configurações de desenvolvimento
VITE_DEV_MODE=false
VITE_DEBUG_LOGS=false

# Configurações de tema (opcional)
VITE_PRIMARY_COLOR=#3b82f6
VITE_SECONDARY_COLOR=#64748b

